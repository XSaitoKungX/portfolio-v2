{
  "$schema": "https://appwrite.io/schemas/appwrite.json",
  "projectId": "696615c200386f6d3ba3",
  "projectName": "Portfolio",
  "settings": {
    "services": {
      "account": true,
      "avatars": true,
      "databases": true,
      "locale": true,
      "health": true,
      "storage": true
    }
  },
  "databases": [
    {
      "name": "portfolio",
      "$id": "portfolio-db",
      "enabled": true
    }
  ],
  "collections": [
    {
      "databaseId": "portfolio-db",
      "$id": "blog-posts",
      "name": "Blog Posts",
      "enabled": true,
      "documentSecurity": true,
      "attributes": [
        {
          "key": "title",
          "type": "string",
          "size": 255,
          "required": true
        },
        {
          "key": "slug",
          "type": "string",
          "size": 255,
          "required": true
        },
        {
          "key": "content",
          "type": "string",
          "size": 65535,
          "required": true
        },
        {
          "key": "excerpt",
          "type": "string",
          "size": 500,
          "required": false
        },
        {
          "key": "published",
          "type": "boolean",
          "required": true,
          "default": false
        },
        {
          "key": "publishedAt",
          "type": "datetime",
          "required": false
        },
        {
          "key": "tags",
          "type": "string",
          "size": 1000,
          "required": false,
          "array": true
        },
        {
          "key": "category",
          "type": "string",
          "size": 100,
          "required": false
        },
        {
          "key": "coverImage",
          "type": "string",
          "size": 255,
          "required": false
        },
        {
          "key": "author",
          "type": "string",
          "size": 100,
          "required": true
        }
      ],
      "indexes": [
        {
          "key": "slug_index",
          "type": "unique",
          "attributes": ["slug"]
        },
        {
          "key": "published_index",
          "type": "key",
          "attributes": ["published"]
        },
        {
          "key": "publishedAt_index",
          "type": "key",
          "attributes": ["publishedAt"],
          "orders": ["DESC"]
        }
      ]
    },
    {
      "databaseId": "portfolio-db",
      "$id": "projects",
      "name": "Projects",
      "enabled": true,
      "documentSecurity": true,
      "attributes": [
        {
          "key": "title",
          "type": "string",
          "size": 255,
          "required": true
        },
        {
          "key": "description",
          "type": "string",
          "size": 1000,
          "required": true
        },
        {
          "key": "technologies",
          "type": "string",
          "size": 100,
          "required": false,
          "array": true
        },
        {
          "key": "liveUrl",
          "type": "url",
          "required": false
        },
        {
          "key": "githubUrl",
          "type": "url",
          "required": false
        },
        {
          "key": "thumbnail",
          "type": "string",
          "size": 255,
          "required": false
        },
        {
          "key": "featured",
          "type": "boolean",
          "required": true,
          "default": false
        },
        {
          "key": "order",
          "type": "integer",
          "required": false,
          "default": 0
        }
      ],
      "indexes": [
        {
          "key": "featured_index",
          "type": "key",
          "attributes": ["featured"]
        },
        {
          "key": "order_index",
          "type": "key",
          "attributes": ["order"],
          "orders": ["ASC"]
        }
      ]
    }
  ],
  "buckets": [
    {
      "$id": "portfolio-images",
      "name": "Portfolio Images",
      "enabled": true,
      "maximumFileSize": 10485760,
      "allowedFileExtensions": [
        "jpg",
        "jpeg",
        "png",
        "gif",
        "webp",
        "svg",
        "ico"
      ],
      "compression": "gzip",
      "encryption": true,
      "antivirus": true
    },
    {
      "$id": "documents",
      "name": "Documents",
      "enabled": true,
      "maximumFileSize": 20971520,
      "allowedFileExtensions": [
        "pdf",
        "doc",
        "docx",
        "txt",
        "md"
      ],
      "compression": "gzip",
      "encryption": true,
      "antivirus": true
    }
  ]
}
